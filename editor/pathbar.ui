<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Pathbar" parent="GtkBox">
    <property name="hexpand">True</property>
    <property name="overflow">hidden</property>
    <child>
      <object class="GtkScrolledWindow" id="scrolled_window">
        <property name="hexpand">True</property>
        <property name="hscrollbar-policy">external</property>
        <property name="vscrollbar-policy">never</property>
        <property name="hadjustment">
          <object class="GtkAdjustment">
            <signal name="changed" handler="on_adjustment_changed"/>
            <signal name="notify::page-size" handler="on_page_size_changed"/>
          </object>
        </property>
        <child>
          <object class="GtkBox" id="button_box"/>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkMenuButton" id="location_menu">
        <property name="icon-name">view-more-symbolic</property>
        <property name="tooltip-text" translatable="true">Current Folder Menu</property>
        <property name="menu-model">location_menu_model</property>
      </object>
    </child>
  </template>
  <menu id="location_menu_model">
    <section>
      <item>
        <attribute name="label" translatable="true">Reload</attribute>
        <attribute name="action">browser.reload-view</attribute>
      </item>
      <item>
        <attribute name="label" translatable="true">Copy current path</attribute>
        <attribute name="action">browser.copy-location</attribute>
      </item>
      <item>
        <attribute name="label" translatable="true">Edit location</attribute>
        <attribute name="action">browser.edit-location</attribute>
      </item>
    </section>
  </menu>
</interface>
