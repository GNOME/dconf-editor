<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="OverlayedList" parent="GtkBox">
    <property name="hexpand">1</property>
    <property name="vexpand">1</property>
    <style>
      <class name="overlayed-list"/>
      <class name="vertical"/>
      <class name="view"/>
    </style>
    <child>
      <object class="GtkOverlay" id="overlay">
        <property name="visible">1</property>
        <property name="hexpand">1</property>
        <property name="vexpand">1</property>
        <property name="child">
          <object class="GtkScrolledWindow" id="scrolled">
            <property name="hexpand">1</property>
            <property name="vexpand">1</property>
            <property name="hscrollbar-policy">never</property>
            <!-- <property name="max-content-height">300</property> -->
            <property name="propagate-natural-width">1</property>
            <property name="propagate-natural-height">1</property>
            <child>
              <object class="AdwClamp">
                <child>
                  <object class="GtkListBox" id="main_list_box">
                    <property name="selection-mode">none</property>
                    <property name="margin-top">0</property>
                    <property name="margin-bottom">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <signal name="selected-rows-changed" handler="on_selection_changed"/>
                    <child type="placeholder">
                      <object class="RegistryPlaceholder">
                        <property
                          name="icon-name"
                          bind-source="OverlayedList"
                          bind-property="placeholder-icon"
                          bind-flags="sync-create"
                        />
                        <property
                          name="title"
                          bind-source="OverlayedList"
                          bind-property="placeholder-title"
                          bind-flags="sync-create"
                        />
                        <property
                          name="description"
                          bind-source="OverlayedList"
                          bind-property="placeholder-description"
                          bind-flags="sync-create"
                        />
                        <property name="compact">true</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <child type="overlay">
          <object class="GtkBox" id="edit_mode_box">
            <property name="visible">0</property>
            <property name="halign">center</property>
            <property name="valign">end</property>
            <property name="width-request">200</property>
            <style>
              <class name="linked"/>
              <class name="linked-circular"/>
            </style>
            <child>
              <object class="GtkButton" id="leave_edit_mode_button">
                <property name="hexpand">1</property>
                <!-- <property name="centered">True</property> -->
                <!-- <property name="iconic">True</property> -->
                <property name="focus-on-click">0</property>
                <style>
                  <class name="left-on-ltr"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="enter_edit_mode_button">
                <property name="hexpand">1</property>
                <!-- <property name="centered">True</property> -->
                <!-- <property name="iconic">True</property> -->
                <property name="focus-on-click">0</property>
                <style>
                  <class name="right-on-ltr"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

